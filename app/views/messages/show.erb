<div class="messages">
  <ul>
    <% @group.messages.each do |message| %>
      <% buildclass="message" %>
      <% buildclass+=" user_message" if message.user.username == @user.username %>
      <% buildclass+=" admin_message" if message.user.username == @group.get_admin.username%>
      <li class="<%= buildclass %>"><%= message.user.username %>: <%= message.themessage %></li>
    <% end %>
  </ul>
</div>
<form method="post" action="/group/<%= @group.id %>/message">
  <input type="text" name="message" />
  <input type="submit" value="send" />
</form>
